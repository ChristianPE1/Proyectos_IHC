---
const links = [
  {
    icon: "/anexo_juego/sketch.jpg", // Reemplaza con tu ícono
    title: "SKETCHING",
    description: "Boceto Inicial",
    buttonText: "VER SKETCH",
    buttonLink:
      "https://drive.google.com/file/d/1qpL8otT3f02zOWCEvkNcCqSbnPajZW1l/view?usp=sharing",
  },
  {
    icon: "/anexo_juego/VR.png", // Reemplaza con tu ícono
    title: "EVALUACION CON USUARIOS",
    description: "Boceto Inicial",

    buttonText: "IR A LOS VIDEOS",
    buttonLink:
      "https://www.youtube.com/playlist?list=PLCFYbu8kDdyh8CSxQQCByQCPL1rVQVTpQ", // Añade el enlace correspondiente
  },
];
---

<section class="links-directos">
  <h1 class="font-bold text-4xl text-center">
    <strong class="text-cyan-500">Anexos</strong>
  </h1>
  <div class="links-container">
    {links.map((link) => (
      <div class="link-card">
        <div class="colored-section"></div> {/* Sección de color adicional */}
        <img src={link.icon} alt={`Ícono de ${link.title}`} />
        <h3><strong>{link.title}</strong></h3>
        <p>{link.description}</p>

        <div class="button-container">
          <a href={link.buttonLink} class="btn" target="_blank">
            {link.buttonText}
          </a>
        </div>
      </div>
    ))}
  </div>
</section>

<style>
  .links-directos {
    text-align: center;
    color: #000000;
    padding: 2rem;
    background-color: #ffffff;
  }

  .links-container {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-top: 2rem;
  }

  .link-card {
    position: relative; /* Necesario para el uso de secciones absolutas */
    background: #ffffff;
    border-radius: 8px;
    padding: 1.5rem;
    width: 250px;
    min-height: 400px;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    border: 1px solid #ddd;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    color: #000000;
    gap: 1rem;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .link-card:hover {
    transform: translateY(-10px) scale(1.05);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
  }

  .colored-section {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100px; /* Ajusta el tamaño de la sección de color */
    background: linear-gradient(135deg, #2dd4bf, #ffffd1); /* Cambia por el color que prefieras */
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    z-index: 1;
  }

  .link-card img {
    position: relative;
    z-index: 2; /* Para que el contenido esté por encima de la sección de color */
    width: 120px;
    height: 120px;
    object-fit: cover;
    margin: 1rem auto 1rem auto;
    display: block;
    border-radius: 50%;
  }

  .link-card h3 {
    color: #000000;
    font-size: 1.2rem;
    margin-bottom: 1rem;
  }

  .link-card p {
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
  }

  .button-container {
    margin-top: auto; /* Empuja los botones al fondo de la tarjeta */
    display: flex;
    flex-direction: column;
    gap: 0.5rem; /* Espaciado entre botones */
    width: 100%;
  }

  .btn {
    background: #85e3ff;
    color: #111;
    text-decoration: none;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    font-weight: bold;
    text-align: center;
    box-sizing: border-box;
    width: 100%;
  }

  .btn:hover {
    background: #6eb5ff;
  }
</style>
